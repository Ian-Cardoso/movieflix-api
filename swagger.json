{
  "openapi": "3.1.0",
  "info": {
    "title": "Movieflix API",
    "description": "Api responsavel por gerenciar os filmes do Movie",
    "version": "1.0.0"
  },
  "paths": {
    "/movies": {
      "get": {
        "tags": ["Movies"],
        "summary": "Obter todos os filmes",
        "responses": {
          "200": {
            "description": "Retorna uma lista de filmes",
            "content": { 
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/Movie"
                  }
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "Movie": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer",
            "description": "Id do filme"
          },
          "title": {
            "type": "string",
            "description": "Titulo do filme"
          },
          "genre_id": {
            "type": "string",
            "description": "Genero do filme"
          }, 
          "genres": {
            "type": "object",
            "properties": {
              "id": {
                "type": "string",
                "description": "Id do genero"
              }, 
              "name": {
                "type": "string",
                "description": "Nome do genero"
              }
            }
          },
              "languages": {
            "type": "object",
            "properties": {
              "id": {
                "type": "string",
                "description": "Id da linga"
              }, 
              "name": {
                "type": "string",
                "description": "Nome da lingua"
              }
            }
          },
          "language_id": {
            "type": "string",
            "description": "Idioma do filme"
          }, 
          "oscar_count": {
            "type": "integer",
            "description": "Contagem de oscars"
          },
          "release_date": {
            "type": "string",
            "format": "date",
            "description": "Data de lan√ßamento do filme"
          } 
        }
      }
    }
  }
}